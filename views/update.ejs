<html>
  <%-include('./partials/fill.ejs')%>
  <body>
    <div class="section">
      <h1>Yet Another To-Do-List</h1>
      <a class="button" href="/todo-list">To-Do List</a>
      <form action="/updated/<%=taskID%>" method="post">
        <fieldset>
          <label for="taskName">Task Name</label>
          <input type="text" placeholder="Fix the computer" name="newTask" id="newTask" value="<%=taskName%>">
          <label for="details">Details</label>
          <textarea placeholder="Stop being lazy and actually do the work..." name="newDetails" id="newDetails"><%=details%></textarea>
        </fieldset>
        <input class="button-primary" type="submit" value="Update">
      </form>
    </div>
  </body>
</html>