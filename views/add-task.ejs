<html>
  <%-include('./partials/fill.ejs')%>
  <body>
    <div class="section">
      <h1>Yet Another To-Do-List</h1>
      <a class="button" href="/todo-list">To-Do List</a>
      <form action="/add-new" method="post">
        <fieldset>
          <label for="taskName">Task Name</label>
          <input type="text" placeholder="Buy more ramen" name="taskName" id="taskName">
          <label for="details">Details</label>
          <textarea placeholder="Shin Ramen is ok, but that spicy udon tho..." name="details" id="details"></textarea>
        </fieldset>
        <input class="button-primary" type="submit" value="Add">
      </form>
    </div>
  </body>
</html>